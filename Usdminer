<script>
  const adminPhone = '6283847556444';
  let selectedPackage = '';
  let selectedPrice = 0;
  function openModal(packageName, price) {
    selectedPackage = packageName;
    selectedPrice = price;
    document.getElementById('modal').style.display = 'flex';
  }
  function sendWhatsApp() {
    const nama = document.getElementById('nama').value.trim();
    const metode = document.getElementById('metode').value;
    if (!nama || !metode) {
      alert('Harap isi nama dan pilih metode pembayaran.');
      return;
    }
    const message = `Halo Admin, saya ingin membeli kecepatan mining:%0A%0A‚úÖ Kecepatan: ${selectedPackage}%0Aüí∞ Harga: Rp${selectedPrice.toLocaleString('id-ID')}%0Aüë§ Nama Pengirim: ${nama}%0Aüí≥ Metode Pembayaran: ${metode}`;
    window.open(`https://wa.me/${adminPhone}?text=${message}`, '_blank');
    document.getElementById('modal').style.display = 'none';
    document.getElementById('nama').value = '';
    document.getElementById('metode').value = '';
  }
  function generatePurchaseHistory() {
    const names = ['Andi','Rina','Joko','Toni','Sari','Ilham','Dina','Yudi','Putri','Ali'];
    const history = [];
    for (let i = 0; i < 30; i++) {
      const name = names[Math.floor(Math.random() * names.length)] + Math.floor(Math.random() * 100);
      const gh = Math.floor(Math.random() * (5000 - 100 + 1)) + 100;
      history.push(`${name} membeli ${gh} GH/s`);
    }
    document.getElementById("purchaseHistory").innerText = history.join(" üî∏ ");
  }
  generatePurchaseHistory();
      </script>
      </div>
      </div>
